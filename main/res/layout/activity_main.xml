<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asamad.calculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/textview"
        android:textSize="15pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="1"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button"
        android:layout_below="@id/textview"
        android:textIsSelectable="true" />

    <Button
        android:text="4"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button4"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="true" />

    <Button
        android:text="-"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button12"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        tools:onClick="action" />

    <Button
        android:text="8"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button10"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textIsSelectable="true" />

    <Button
        android:text="7"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button9"
        android:layout_toLeftOf="@id/button10"
        android:layout_below="@id/button4"
        android:textIsSelectable="true" />

    <Button
        android:text="0"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button13"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="true" />

    <Button
        android:text="."
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button14"
        android:layout_below="@+id/button10"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:textIsSelectable="true" />

    <Button
        android:text="5"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button6"
        android:layout_above="@+id/button10"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textIsSelectable="true" />

    <Button
        android:text="2"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button2"
        android:layout_below="@+id/textview"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textIsSelectable="true" />

    <Button
        android:text="9"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button11"
        android:layout_above="@+id/button14"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:textIsSelectable="true" />

    <Button
        android:text="6"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button8"
        android:layout_above="@+id/button11"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:textIsSelectable="true" />

    <Button
        android:text="3"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button3"
        android:layout_below="@+id/textview"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:textIsSelectable="true" />

    <Button
        android:text="/"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button5"
        tools:onClick="action"
        android:layout_above="@+id/button12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="x"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button7"
        tools:onClick="action"
        android:layout_below="@+id/textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="="
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button15"
        tools:onClick="equal"
        android:layout_below="@+id/button10"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:text="+"
        android:textSize="15pt"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:id="@+id/button16"
        tools:onClick="action"
        android:layout_below="@+id/button12"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11" />


</RelativeLayout>
